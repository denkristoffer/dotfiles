fresh freshshell/fresh bin/fresh --bin

fresh-options --file
  fresh denkristoffer/dotfiles config/\*
fresh-options

fresh-options --file=~/.ssh
  fresh denkristoffer/dotfiles ssh/\*
fresh-options

# Shell
fresh denkristoffer/dotfiles shell/aliases/\*

fresh_after_build() {
  sh -c "bootstrap.sh"
  
  echo "Done?"
}